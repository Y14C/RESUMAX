{
  "name": "resumax-frontend",
  "version": "1.0.0",
  "description": "Resumax - Windows Desktop Application",
  "main": "public/electron.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently --kill-others \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build:backend": "cd ../packaging && pyinstaller resumax-backend.spec --clean --noconfirm",
    "build:electron": "npm run build && electron-builder --win",
    "build:full": "npm run build:backend && npm run build:electron"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "animejs": "^3.2.2",
    "lucide-react": "^0.548.0",
    "pdfjs-dist": "^5.4.296",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-pdf": "^10.2.0",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@types/animejs": "^3.1.13",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.6.3",
    "vite": "^7.1.12",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.resumax.app",
    "productName": "Resumax",
    "directories": {
      "output": "../packaging/release-new",
      "buildResources": "public"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "shortcutName": "Resumax"
    },
    "files": [
      "public/electron.cjs",
      "public/preload.js",
      "public/icon.ico",
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../packaging/dist/ResumaxBackend/",
        "to": "backend/"
      },
      {
        "from": "../backend/Latex_formats",
        "to": "backend/Latex_formats"
      },
      {
        "from": "../essentialpackage",
        "to": "essentialpackage"
      }
    ],
    "asarUnpack": [
      "**/*.{node,dll}",
      "dist/**/*"
    ]
  }
}
