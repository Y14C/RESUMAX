{
  "name": "resumax-frontend",
  "version": "1.0.0",
  "description": "Resumax - Windows Desktop Application",
  "main": "public/electron.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "animejs": "^3.2.2",
    "pdfjs-dist": "^5.4.296",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-pdf": "^10.2.0",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@types/animejs": "^3.1.13",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.6.3",
    "vite": "^7.1.12",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.resumax.app",
    "productName": "Resumax",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "dist/**/*",
      "public/electron.cjs",
      "public/icon.ico",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../Backend",
        "to": "Backend",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/*.pyc"
        ]
      }
    ]
  }
}
